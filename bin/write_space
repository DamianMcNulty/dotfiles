#!/usr/bin/env ruby -w

require 'rinda/rinda'

usage = "write_space key value [url]"

key = ARGV[0] || fail(usage)
value = ARGV[1] || STDIN.read
uri = ARGV[2] || "druby://127.0.0.1:7632" #Port RNDA

DRb.start_service 
space = Rinda::TupleSpaceProxy.new(DRbObject.new(nil, uri))
space.write([key, value])
