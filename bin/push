#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'ruby', 'utility', 'lib'))
require 'utility'

util = Util.new
storage = util.load(:storage) || {}
if storage[ARGV.join(' ')]
  storage[ARGV.join(' ')] << util.get_piped_data
else
  storage[ARGV.join(' ')] = util.get_piped_data
end
util.save(:storage, storage)
